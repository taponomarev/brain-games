{
    "name": "hexlet/code",
    "description": "Brain Games is a set of five console games, built on the principle of popular mobile brain training applications.",
    "bin": [
        "bin/brain-games",
        "bin/brain-even",
        "bin/brain-calc",
        "bin/brain-engine"
    ],
    "scripts": {
        "phpcs": "phpcs"
    },
    "authors": [
        {
            "name": "Alexey Ponomarev",
            "email": "taponomarev@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "wp-cli/php-cli-tools": "^0.11.11"
    },
    "autoload": {
        "files": [
            "src/Cli.php",
            "src/Engine.php",
            "src/Utils.php",
            "src/Games/BrainEven.php",
            "src/Games/BrainCalc.php"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5"
    }
}
